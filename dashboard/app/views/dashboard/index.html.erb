<div class="header">
	<h1>Dashboard</h1>
</div>

<a id = "switch_view" class="button">
	<span>View Data</span>
</a>
<div class = "panel1">
	<div class = "front">
		<a id = "save_image" class="button">
			<span>Save as Image</span>
		</a>
	</div>
	<div class = "back">
		<a id = "download_data" class="button">
			<span>Download data</span>
		</a>
	</div>
</div>


<div class = "panel2">
	<div class = "front">
		<%= content_tag "div", id: "graphCanvas", data: {temperatures: @temperatureDataset, humidities: @humidityDataset, dates: @dates, times: @times, roomNumber: @roomNumber, tempPoly6: @temperaturePoly6, tempPoly7: @temperaturePoly7, tempPoly8: @temperaturePoly8,  humidPoly6: @humidityPoly6, humidPoly7: @humidityPoly7, humidPoly8: @humidityPoly8 } do %><% end %>
		<canvas id="temperatureChart"></canvas>
		<div class = "checkwrapper">
			<table>
				<tr>
				  <td>
				       <label  style="word-wrap:break-word">
				        <input id="checkid"  type="checkbox" value="test" />Temperature
				     </label>
				  </td>
				  <td>
				      <label  style="word-wrap:break-word">
				        <input id="checkid"  type="checkbox" value="test" />Temperature Polynomial Regression
				     </label>
				  </td>
				</tr>
				<tr>
				  <td>
				       <label  style="word-wrap:break-word">
				        <input id="checkid"  type="checkbox" value="test" />Humidity
				     </label>
				  </td>
				  <td>
				      <label  style="word-wrap:break-word">
				        <input id="checkid"  type="checkbox" value="test" />Humidity Polynomial Regression
				     </label>
				  </td>
				</tr>
			</table>
		</div>
	</div>
	<div class = "back">
		<table id = "datatable">
		  <tr>
		    <th>Date</th>
		    <th>Time</th>
		    <th>Temperature (Â°C)</th>
		    <th>Humidity (%)</th>
		  </tr>
		  <% @combinedDataset.each do |date, time, temperature, humidity| %>
		  <tr>
		    <td><%= date %></td>
		    <td><%= time %></td>
		    <td><%= temperature %></td>
		    <td><%= humidity %></td>
		  </tr>
		  <%end %>
		</table>
	</div>
</div>
<div class = "footer">
	<p>Calum McGuicken 2019</p>
</div>